<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BudgetTracker</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BudgetTracker.Web.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="app-shell">
        <header class="topbar">
            <div class="topbar__brand">
                <span class="logo-mark">BT</span>
                <div>
                    <p class="brand-title">BudgetTracker Grp3</p>
                    <p class="brand-subtitle">Intentional money moves</p>
                </div>
            </div>
            <nav class="topbar__nav">
                <a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </nav>
        </header>

        <main role="main" class="page">
            @RenderBody()
        </main>

        <footer class="footer">
            <span>&copy; 2026 BudgetTracker</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>